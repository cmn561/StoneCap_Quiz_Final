<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.statequiz.MainActivity"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State Quiz"
        android:id="@+id/title"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="#ff485e"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:id="@+id/aboutButton"
        android:textSize="20dp"
        android:padding="20dp"
        android:outlineProvider="bounds"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/title"
        android:layout_alignEnd="@+id/instructionsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:id="@+id/instructionsButton"
        android:textSize="20dp"
        android:padding="20dp"
        android:outlineProvider="bounds"
        android:layout_above="@+id/aboutButton"
        android:layout_alignLeft="@+id/title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        android:id="@+id/leaderboard"
        android:textSize="20dp"
        android:padding="20dp"
        android:outlineProvider="bounds"
        android:layout_above="@+id/instructionsButton"
        android:layout_alignLeft="@+id/title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quizzes"
        android:id="@+id/quizzes"
        android:textSize="20dp"
        android:padding="20dp"
        android:outlineProvider="bounds"
        android:layout_above="@+id/leaderboard"
        android:layout_alignLeft="@+id/title"
        android:layout_alignEnd="@+id/leaderboard" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/usa_map"
        android:padding="15dp"
        android:layout_above="@+id/quizzes"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title" />

</RelativeLayout>

