<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questionNumberTV"
        android:gravity="center_horizontal"
        android:id="@+id/outlineQuestionNumberTV"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textIsSelectable="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/outlineImageView"
        android:gravity="center"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:text="Medium Text"
        android:id="@+id/outlineScoreTextView"
        android:layout_gravity="center_horizontal"
        android:textColor="#6200ff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guessTheState"
        android:id="@+id/outlineGuessTheState"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ff0000" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/outlineRow1">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="New Button"
            android:id="@+id/aboutButton"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="New Button"
            android:id="@+id/instructionsButton"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/outlineRow2">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="New Button"
            android:id="@+id/leaderboard"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="New Button"
            android:id="@+id/quizzes"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/outlineAnswer"
        android:layout_gravity="bottom|center_horizontal"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center_horizontal" />
</LinearLayout>